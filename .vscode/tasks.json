{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build All",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"-o",
				"main",
				"src/*.c",
				"-I",
				"include/",
				"-l",
				"SDL2"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang"
		}
	]
}